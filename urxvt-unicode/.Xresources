!urxvt.transparent: true
!urxvt.shading: 60
!urxvt*font: SourceCodePro\ Text\ 2-12

!set real transparency
urxvt*depth: 32
! set background
!urxvt*background: rgba:0000/0000/0200/c800
urxvt.background: [65]#000000
! no scrollar
urxvt.scrollBar: false
urxvt.intensityStyles: false
urxvt*termName: rxvt-unicode-256color

! enable to clicl on links 
urxvt.perl-ext-common: mark-urls
rxvt.urlLauncher: firefox

! save the last 10.000 lines
URxvt.saveLines: 10000

! activate scrollback-buffer in screen session
URxvt.secondaryScroll: true

!URxvt*lineSpace: 3

! Decrease letter spacing
!URxvt*letterSpace: -1

! Set urxvt as login shell
URxvt*loginShell: true

! Font settings like antialiasing etc.
Xft.dpi:        96
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.antialias: 1
Xft.autohint: 0
Xft.lcdfilter: lcddefault

! set font DejaVu
URxvt.font: xft:DejaVu Sans Mono:style=Book:pixelsize=10
URxvt.boldfont: xft:DejaVu Sans:style=Bold:pixelsize=10

! special
*.foreground:   #bcbbbf
*.background:   #1b1b1b
*.cursorColor:  #bcbbbf

! black
*.color0:       #3d3d3d
*.color8:       #4d4d4d

! red
*.color1:       #6673bf
*.color9:       #899aff

! green
*.color2:       #3ea290
*.color10:      #52ad91

! yellow
*.color3:       #b0ead9
*.color11:      #98c9bb

! blue
*.color4:       #31658c
*.color12:      #477ab3

! magenta
*.color5:       #596196
*.color13:      #7882bf

! cyan
*.color6:       #8292b2
*.color14:      #95a7cc

! white
*.color7:       #c8cacc
*.color15:      #edeff2

